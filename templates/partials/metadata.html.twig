<meta charset="utf-8">
{% for meta in page.metadata %}
<meta {% if meta.name %}name="{{ meta.name }}" {% endif %}{% if meta.content %}content="{{ meta.content }}"{% endif %}>
{% endfor %}
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
<meta name="format-detection" content="telephone=no">

{% if page.media.images and page.header.banner %}
{% set card_source = page.media.images[page.header.banner].url %}
{% elseif page.media.images %}
{% set card_source = (page.media.images | first).url %}
{% else %}
{% set card_source = url('theme://assets/img/background.jpg') %}
{% endif %}

<meta itemprop="name" content="{{ page.title }}">
<meta itemprop="description" content="{{ page.summary() ? page.summary() : page.metadata('description') }}">
<meta itemprop="image" content="{{ card_source }}">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ page.title }}">
<meta name="twitter:description" content="{{ page.summary() ? page.summary() : page.metadata('description') }}">
<meta name="twitter:image:src" content="card_source">

<meta property="og:title" content="{{ page.title }}">
<meta property="og:type" content="article">
<meta property="og:url" content="{{ page.url(true, true) }}">
<meta property="og:image" content="{{ card_source }}">
<meta property="og:description" content="{{ page.summary() ? page.summary() : page.metadata('description') }}">
<meta property="og:site_name" content="{{ site.title }}">
<meta property="article:published_time" content="{{ page.date | date('c') }}">
<meta property="article:modified_time" content="{{ page.date | date('c') }}">
