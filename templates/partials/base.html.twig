<!doctype html>
<html lang="{{ grav.language.getLanguage ?: 'nl' }}">
    <head>
        {% include 'partials/metadata.html.twig' %}

        <title>{% block title %}{{ site.title }}{% endblock title %}</title>

        <link rel="canonical" href="{{ page.url(true, true) }}">
        <link rel="alternate" type="application/rss+xml" href="{{ url('activiteiten.rss', true) }}">
        <link rel="alternate" type="application/atom+xml" href="{{ url('activiteiten.atom', true) }}">
        <link rel="alternate" type="application/activitystream+json" href="{{ url('activiteiten.json', true) }}">

        <link rel="apple-touch-icon" sizes="180x180" href="{{ url('theme://assets/img/logo_.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ url('theme://assets/img/logo_32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ url('theme://assets/img/logo_16.png') }}">
        <link rel="manifest" href="{{ url('theme://assets/site.webmanifest') }}">
        <link rel="mask-icon" href="{{ url('theme://assets/img/logo_apple.svg') }}" color="#121212">
        <link rel="shortcut icon" href="{{ url('theme://assets/img/logo.ico') }}">
        <meta name="apple-mobile-web-app-title" content="Matumaini Katanga">
        <meta name="application-name" content="Matumaini Katanga">
        <meta name="msapplication-TileColor" content="#ffffff">
        <meta name="msapplication-config" content="{{ url('theme://assets/browserconfig.xml') }}">
        <meta name="theme-color" content="#ffffff">

        <link rel="stylesheet" media="screen" href="{{ url('theme://assets/css/dist/screen.css') }}">
        <link rel="stylesheet" media="print" href="{{ url('theme://assets/css/dist/print.css') }}">
        <script defer src="{{ url('theme://assets/js/dist/scripts.js') }}"></script>

        {% block head %}
        {% endblock head %}
    </head>
    <body id="page-{{ page.template }}">
        <noscript>
            JavaScript is uitgeschakeld: sommige functionaliteit van deze website zal niet correct werken.
        </noscript>
        <header>
            <h1>{{ site.title }}</h1>
            <nav>
                <ul>
                    <li><a href="{{ url('/') }}">{{ site.title }}</a></li>
                    {% if page.parent.slug != 'pages' %}
                    <li><a href="{{ page.parent.link }}">{{ page.parent.slug }}</a></li>
                    {% endif %}
                    {% for item in page.header.navigation %}
                    <li><a href="{{ item.link }}">{{ item.name }}</a></li>
                    {% endfor %}
                    <li><a href="#schenken">Doe een gift</a></li>
                </ul>
            </nav>
        </header>
        <main>
            {% block content %}
            {% endblock content %}
            {% include 'partials/donate.html.twig' %}
        </main>
        {% include 'partials/footer.html.twig' %}
    </body>
</html>
